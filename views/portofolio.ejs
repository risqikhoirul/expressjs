
<%- include('../layouts/head'); -%>

 
<%- include('../layouts/nav'); -%>
<h1>Portofolio</h1>
<div class="tables d-grid gap-2 d-md-block">
  <table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">Views</th>
      <th scope="col">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if (porto.length){ %> 
       <% for(let i = 0; i < porto.length;i++){ %> 
        <tr>
      <th scope="row"><%= (i+1) %> </th>
      <td><%= porto[i].nama %></td>
      <td><a href="<%= porto[i].link %>">View Code</a></td>
      <td><a class="btn btn-primary" href="/update/<%= porto[i].no %>" role="button">Edit</a>
        <form action="/delete" method="post">
          <input type="hidden" name="no" value="<%= porto[i].no %> ">
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </td>
      
    </tr>
    <% }}else{ %>
      <tr>
        <td colspan="4" class="text-center">Tidak ada data</td>
      </tr>
      <% } %> 
  </tbody>
</table>
</div>
<form action="/add" method="post">
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text" id="inputGroup-sizing-sm">Nama Project</span>
    <input type="text" name="nama" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  </div>
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text" id="inputGroup-sizing-sm">Link Github</span>
    <input type="text" name="link" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>
<%- include('../layouts/footer'); -%>